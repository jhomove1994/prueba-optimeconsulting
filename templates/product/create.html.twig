{% extends 'base.html.twig' %}

{% block title %}Crear producto!{% endblock %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block body %}
   <div class="container-fluid mt-4 card p-4 shadow-lg p-3 mb-5 bg-white rounded" style="width: 36rem;">
        {% for message in errors %}
            <div class="alert alert-warning">
                {{ message }}
            </div>
        {% endfor %}
        <h1 class="mt-4 mb-3">Nuevo producto</h1>
        <div class="row">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
